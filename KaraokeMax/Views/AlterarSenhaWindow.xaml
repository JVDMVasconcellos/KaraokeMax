<Window x:Class="KaraokeMax.Views.AlterarSenhaWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Alterar Senha" Height="500" Width="360"
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize"
        Background="Transparent" WindowStyle="None" AllowsTransparency="True">
    <Window.Resources>
        <DropShadowEffect x:Key="drop" ShadowDepth="0" BlurRadius="16" Opacity="0.35"/>
    </Window.Resources>
    <Border
        Background="#23232A"
        BorderBrush="#B7AFFF"
        BorderThickness="2"
        CornerRadius="16"
        Effect="{DynamicResource drop}">
        <Grid Margin="24">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="16"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Cabeçalho -->
            <StackPanel Grid.Row="0" HorizontalAlignment="Center">
                <Border Width="112" Height="112" CornerRadius="20" Background="#29293A" Padding="12"
                        Effect="{DynamicResource drop}">
                    <TextBlock Text="🔒" FontSize="64" VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="#B7AFFF"/>
                </Border>
                <TextBlock Text="Alterar Senha" Foreground="#F5F5F5" FontSize="20" FontWeight="SemiBold" TextAlignment="Center" Margin="0,12,0,0"/>
                <TextBlock Text="Defina uma nova senha para continuar" Foreground="#CFCFE2" FontSize="12" />
            </StackPanel>

            <!-- Formulário -->
            <StackPanel Grid.Row="2" Margin="0,8,0,0">
                <TextBlock Text="Nova Senha" Foreground="#F5F5F5" Margin="2,0,0,4"/>
                <TextBox x:Name="NovaSenhaBox" Height="38" FontSize="14" Padding="10"
                             Background="#29293A" Foreground="#F5F5F5" BorderBrush="#6A6A8A"/>

                <TextBlock Text="Confirmar Nova Senha" Foreground="#F5F5F5" Margin="2,12,0,4"/>
                <TextBox x:Name="ConfirmarSenhaBox" Height="38" FontSize="14" Padding="10"
                             Background="#29293A" Foreground="#F5F5F5" BorderBrush="#6A6A8A"/>

                <Button x:Name="AlterarSenhaButton" Content="Alterar Senha" Height="42" Margin="0,25,0,0"
                        Background="#B7AFFF" Foreground="#23232A" FontWeight="SemiBold"
                        Click="AlterarSenhaButton_Click">
                    <Button.Effect>
                        <DropShadowEffect ShadowDepth="0" BlurRadius="10" Opacity="0.4"/>
                    </Button.Effect>
                </Button>
            </StackPanel>
        </Grid>
    </Border>
</Window>
