<Window x:Class="KaraokeMax.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="KaraokeMax – Entrar" Height="500" Width="360"
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize"
        Background="Transparent" WindowStyle="None" AllowsTransparency="True">
    <Window.Resources>
        <DropShadowEffect x:Key="drop" ShadowDepth="0" BlurRadius="16" Opacity="0.35"/>
    </Window.Resources>
    
    <Border
        Background="#23232A"
        BorderBrush="#B7AFFF"
        BorderThickness="2"
        CornerRadius="16"
        Effect="{DynamicResource drop}">
        <Grid Margin="24">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="16"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Button Content="✕"
                    Width="32" Height="32"
                    HorizontalAlignment="Right" VerticalAlignment="Top"
                    Margin="0,-16,-16,0"
                    Background="Transparent" Foreground="#F5F5F5" BorderBrush="{x:Null}"
                    FontSize="16" FontWeight="Bold" Cursor="Hand"
                    Click="CloseButton_Click"/>

            <StackPanel Grid.Row="0" HorizontalAlignment="Center">
                <Border Width="112" Height="112" CornerRadius="20" Background="#29293A" Padding="12"
                        Effect="{DynamicResource drop}">
                    <Image Source="../Resources/microfoneroxo.png" Stretch="Uniform"/>
                </Border>
                <TextBlock Text="KaraokeMax" Foreground="#F5F5F5" FontSize="20" FontWeight="SemiBold" TextAlignment="Center" Margin="0,12,0,0"/>
                <TextBlock Text="Faça login para continuar" Foreground="#CFCFE2" FontSize="12" />
            </StackPanel>

            <StackPanel Grid.Row="2" Margin="0,8,0,0">
                <TextBlock Text="E-mail" Foreground="#F5F5F5" Margin="2,0,0,4"/>
                <TextBox x:Name="EmailBox" Height="38" FontSize="14" Padding="10"
                         Background="#29293A" Foreground="#F5F5F5" BorderBrush="#6A6A8A"/>

                <TextBlock Text="Senha" Foreground="#F5F5F5" Margin="2,12,0,4"/>
                <PasswordBox x:Name="PasswordBox" Height="38" Padding="10"
                             Background="#29293A" Foreground="#F5F5F5" BorderBrush="#6A6A8A"
                             KeyDown="PasswordBox_KeyDown"/>

                <Button x:Name="LoginButton" Content="Entrar" Height="42" Margin="0,25,0,0"
                        Background="#B7AFFF" Foreground="#23232A" FontWeight="SemiBold"
                        Click="LoginButton_Click">
                    <Button.Effect>
                        <DropShadowEffect ShadowDepth="0" BlurRadius="10" Opacity="0.4"/>
                    </Button.Effect>
                </Button>
            </StackPanel>
        </Grid>
    </Border>
</Window>
